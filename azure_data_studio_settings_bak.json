{
    "editor.fontSize": 14,
    "editor.smoothScrolling": true,
    "editor.cursorBlinking": "smooth",
	"resultsGrid.fontSize": 14,
    "resultsGrid.fontFamily": "Microsoft Sans Serif",
    "resultsGrid.cellPadding": 
    [  
        3,
        10,
        3,
        5
    ],
    "workbench.colorTheme": "Atom One Dark",
    "workbench.enablePreviewFeatures": true,

    "vim.handleKeys": 
    {
        "<C-a>": false, 
        "<C-c>": false, 
        "<C-f>": false,
        "<C-n>": false,
        "<C-r>": true,
        "<C-v>": false,
        "<C-w>": false,
        "<C-x>": false,
    },
    "vim.useSystemClipboard": true,
    "vim.vimrc.enable": true,
	
    "editor.renderWhitespace": "all",
    "security.workspace.trust.untrustedFiles": "open",
    "window.enableMenuBarMnemonics": false,
    "window.autoDetectHighContrast": false,
    "window.customMenuBarAltFocus": false,
    "datasource.connectionsSortOrder": "displayName",
    "workbench.editor.centeredLayoutAutoResize": false,
    "workbench.editor.splitOnDragAndDrop": false,
    "workbench.editorAssociations": {
        "*.{sqlplan}": "workbench.editor.executionplan"
    },
    "telemetry.enableTelemetry": false,
    "telemetry.enableCrashReporter": false,
    "window.restoreWindows": "none",
    "workbench.startupEditor": "newUntitledFile",
    "workbench.editor.untitled.hint": "hidden",
    "editor.autoClosingBrackets": "never",
    "editor.acceptSuggestionOnEnter": "off",
    "queryEditor.tabColorMode": "border",
    "workbench.editor.openPositioning": "last",
}
